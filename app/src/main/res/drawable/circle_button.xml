<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <solid android:color="@color/faded_white" /> <!-- Change to your theme color -->

    <size
        android:width="64dp"
        android:height="64dp" />

    <stroke
        android:width="2dp"
        android:color="@color/white" /> <!-- Optional: add border -->

    <corners android:radius="32dp" /> <!-- Optional, but not needed for oval -->
</shape>
